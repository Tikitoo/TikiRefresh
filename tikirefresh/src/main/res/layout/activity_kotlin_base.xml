<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/kotlin_base_refresh_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <cat.tiki.tikirefresh.widget.TikiSmartRefreshLayout
        android:id="@+id/kotlin_base_refresh_rv_layout"
        android:layout_below="@+id/kotlin_base_refresh_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </cat.tiki.tikirefresh.widget.TikiSmartRefreshLayout>


    <cat.tiki.tikirefresh.widget.TikiErrorView
        android:id="@+id/kotlin_base_error_view"
        android:layout_below="@+id/kotlin_base_refresh_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        />

